.gdpr-signup
  form.gdpr-signup__form
    input.bordered-input(
      name='name'
      placeholder='Your full name'
    )
    input.bordered-input(
      name='email'
      placeholder='Your email address'
    )
    input.bordered-input(
      name='password'
      placeholder='Create password'
      type='password'
    )
    button.avant-garde-button-black Sign Up
    if !DISABLE_GDPR
      .gdpr-signup__form__checkbox
        .gdpr-signup__form__checkbox-left agree to our&nbsp;
              a( href='/terms' ) Terms of Use
              | &nbsp;and&nbsp;
              a(href='/privacy') Privacy Policy
        .gdpr-signup__form__checkbox-right
          .artsy-checkbox--checkbox
            input(
              name='accept_tos'
              type='checkbox'
            )
            label(for='accept_tos')
      .gdpr-signup__form__checkbox
        .gdpr-signup__form__checkbox-left Subscribe to artsy magazine
          .artsy-checkbox--checkbox
            input(
              name='receive_newsletter'
              type='checkbox'
            )
            label(for='receive_newsletter')
    .gdpr-signup__error
  .gdpr-signup__divider Or
  a.avant-garde-button-black.gdpr-signup__modal-fb.gdpr-signup__fb(
    href=sd.AP.facebookPath + fbPathQuery
  )
    i.icon-facebook
    | Continue with Facebook
  if DISABLE_GDPR
    .gdpr-signup__copy
      small.gdpr-signup__small By signing up, you agree to our&nbsp;
        a( href='/terms' ) Terms of Use
        | &nbsp;and&nbsp;
        a(href='/privacy') Privacy Policy
