@require '../../../components/stylus_lib'

.auction-ActiveBidItem
  display flex
  justify-content flext-start
  align-items center

  &__artwork-container
    text-align center
    min-width 0

    img
      max-height 100px
      max-width 200px

      +respond-mobile()
        max-width 130px

  &__artwork
    margin-left 20px
    min-width 25%
    max-width 25%
    padding-right 20px

    +respond-mobile()
      display flex
      flex-direction column
      padding-left 16px
      max-width 100%

    > *
      overflow ellipsis

      +respond-mobile()
        overflow: auto

    h3
      garamond-size('l-caption')
      font-weight 600

  +respond-mobile()
    .bid-status
      padding-bottom 2px
      position relative

  &__title
    garamond-size('l-caption')

  &__lot-number
    avant-garde-size('s-headline')

  &__current-bid, &__bids-num
    garamond-size('l-caption')
    font-style normal

    +respond-mobile()
      display none

  &__current-bid
    width 20%

  &__bids-num
    width 10%

  &__current-and-bids
    +respond-mobile()
      garamond-size('l-caption')
      font-style normal
      width 100%

      &::before
        display inline-block
        background-image url(/images/paddle.png)
        background-repeat no-repeat
        background-position 2px 6px
        -webkit-background-size 63%
        -moz-background-size 63%
        background-size 63%
        padding-right 15px
        height 18px
        content ''

  &__img
    display inline-block
    vertical-align middle

  &__bid-button, &__bid-button-live
    width 13%
    text-align center
    float right

  &__bid-status-cell
    width 17%
    .bid-status
      position relative
      p
        avant-garde-size('s-headline')
