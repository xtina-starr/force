.consignments-step-marker
  margin-top 80px
  margin-bottom 100px
  margin-left 50px
  margin-right 50px

  &_mobile
    margin-top 60px
    margin-left 30px
    margin-right 30px

  &__steps
    ul
      max-width 750px
      margin 0 auto
      align-content center
      align-items center
      display flex
      justify-content space-around

  &__label
    color purple-color
    position absolute
    text-align center
    width 200px
    top 18px
    left -93px
    avant-garde-size('s-headline')

    @media (max-width: 960px)
      width 90px
      left -42px

  &__step
    content ' '
    display flex
    flex-grow 1
    margin 0
    position relative
    text-align right
    z-index -1
    border 1px dashed purple-color

    &::before
      background purple-color
      border-radius 50%
      height 12px
      position absolute
      text-align center
      top -6px
      width 12px
      left -2px
      content ' '

    &:last-child
      flex-basis 0
      flex-grow 0
      flex-shrink 1

    &_active
      border 1px dashed gray-lighter-color

      &::before
        background purple-color

      .consignments-step-marker__label
        color purple-color

    &_active ~ li
      border 1px dashed gray-lighter-color

      .consignments-step-marker__label
        color gray-lighter-color

    &_active ~ li::before
      border 1px dashed gray-lighter-color
      background gray-lighter-color
