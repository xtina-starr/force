.consignments-submission-radio-input
  display flex
  justify-content space-between
  align-items center

  &__label
    width 60%

  &__radio-buttons
    display flex

  &__radio-button
    margin-right 20px
    position relative
    &:last-child
      margin-right 0px

  &__button
    opacity 0
    z-index -1

  &__button-label
    avant-garde-size('s-headline')
    color gray-darker-color

  &__button-control
    position absolute
    top 2px
    left -12px
    width 18px
    height 18px
    border 2px solid gray-lighter-color
    border-radius 50%

    &:hover
      cursor pointer

    &_checked
      &:after
        content ''
        position absolute
        width 8px
        height 8px
        top 3px
        left 3px
        background-color black
        border-radius 50%
