@require '../../stylus_lib'

body.body-fullscreen-article
  .article-content
    .main-layout-container.first
      padding-top 25px
  #articles-show
    margin-top 0px

.article-content.article-fullscreen-content
  background white
  z-index 1
  position relative
  h1.large-garamond-header, .article-author-date, .article-social.fixed.hidden
    display none

  .article-share-fixed
    margin-top 0px
    top 0px

.article-fullscreen
  width 100%
  height 100vh
  overflow hidden
  &.hidden
    opacity 0
  &__overlay
    background black
    opacity 0.17
    min-height 500px
    z-index 1
  &__overlay, &__video-player, &__image
    position fixed
    top 0px
    left 0px
    height 100vh
    width 100vw
    pointer-events none
  &__video-player, &__image
    object-fit cover
    z-index 0
  &__text
    width 100%
    display flex
    flex-direction column
    justify-content flex-end
    position relative
    color white
    z-index 5
    opacity 1
  &__title
    garamond-size('xl-headline')
    text-align left
    max-width 75%
  &__author-date
    garamond-size('l-body', true)
    margin-top 23px
    span
      color gray-lighter-color
      margin-left 20px
  &__share
    z-index 1
    display flex
    justify-content flex-end
    flex-direction column
    .share-item
      a
        text-decoration none
        color white
      display block
      background-color transparent
      transition background-color 0.25s, border-color 0.25s
      &:hover
        a
          color white
          opacity 0.5
    i
      vertical-align middle
  &__content
    bottom 0
    display flex
    justify-content space-between
    align-items flex-start
  &__text, &__share
    padding-bottom 50px
  &__container
    width 100%
    height 100%
    display flex
    flex-direction column
    justify-content flex-end
  &.article-sa-fullscreen
    .article-fullscreen__container
      justify-content space-between

  // Logos
  .article-sa-plus-container
    margin-left 20px
  .article-sa-plus, .article-sa-primary-logo
    display inline-block
  .article-sa-plus
    color white
    font-size 20px
    margin 0px
  .article-sa-primary-logo
    margin-left 20px
    img
      height 50px
  .article-sa-primary-logos
    position absolute
    z-index 1
    margin-top 30px
    .article-sa-plus
      margin-top 10px
  .article-sa-artsy-logo
    color white
    width 148px
    font-size 50px
    backface-visibility hidden

.article-fullscreen
  @media screen and (max-width 550px)
    &__content
      margin 0 20px
    &__title
      garamond-size('headline')
    &__author-date
      garamond-size('s-body')
    .article-sa-artsy-logo
      font-size 32px
      width 95px
    .article-sa-primary-logo img
      height 32px
      margin-top 0px
    .article-sa-primary-logos
      margin 20px
      .article-sa-plus
        margin-top 0px
  @media screen and (max-width 900px)
    &__content
      margin 0 30px
    &__title
      max-width 100%
    &__share
      display none
    .article-sa-primary-logos
      margin 30px