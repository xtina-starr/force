@require '../../stylus_lib'

.article-section-container.responsive-layout-container[data-section-type="image_collection"],
.responsive-layout-container.article-section-container[data-section-type="artworks"],
.article-section-container.responsive-layout-container[data-section-type="image"]
  @media screen and (max-width 1250px)
    &[data-layout=overflow_fillwidth]
      margin 45px 75px
      max-width calc(100vw \- 150px)
  @media screen and (max-width 900px)
    &[data-layout=overflow_fillwidth]
      margin 45px auto
      max-width 100vw
  @media screen and (max-width 550px)
    margin 20px auto

.article-section-container.responsive-layout-container[data-section-type="image"]
  @media screen and (max-width 1250px)
    margin 45px 75px
    max-width calc(100vw \- 150px)
  @media screen and (max-width 900px)
    margin 45px auto
    max-width 100vw

.article-section-image-collection
  width 100%
  margin 0 auto
  ul
    display flex
    justify-content space-between
    opacity 0
    transition opacity .5s
    &.single, &.portrait
      justify-content center
      align-items center

  &.images-loaded ul
    opacity 1
  li
    width 100%
  img
    width 100%
    max-width 100%
    height auto
    display block
    position relative
    margin auto
  figcaption
    margin-top 10px
    text-align left
    color gray-darker-color
    garamond-size('l-caption')
    a
      color gray-darker-color
  .artwork-item-caption
    text-overflow ellipsis
    overflow hidden
    white-space nowrap
    a
      text-decoration none

  &[data-layout='overflow_fillwidth']
    max-width 1100px
    li
      margin-right 30px
      margin-bottom 10px
    li:last-child
      margin-right 0
      margin-bottom 0

  &[data-layout='column_width']
    max-width 580px
    ul
      flex-direction column
      li
        margin-bottom 30px
        &:last-child
          margin-bottom 0

  @media screen and (max-width 900px)
    &[data-layout="overflow_fillwidth"] figcaption
      margin 10px 20px 0 20px

  @media screen and (max-width 650px)
    &[data-layout="column_width"]
      min-width 100%
      figcaption
        margin 10px 20px

  @media screen and (max-width 550px)
    .artwork-item-image-container
      height inherit
    ul
      flex-direction column
    li
      min-width 100%
      margin-right 0
    figcaption
      font-size 13px
      line-height 15px
